          {{
            govukFileUpload({
              id: "fileDelete",
              name: "fileDelete",
              classes:
                "govuk-visually-hidden govuk-!-margin-bottom-0 govuk-!-margin-top-0"
            })
          }}
          {{
            govukInput({
