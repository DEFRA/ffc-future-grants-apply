{
  "name": "ffc-future-grants-apply",
  "version": "0.3.0",
  "description": "Web frontend for the future grants apply journey",
  "homepage": "https://github.com/DEFRA/ffc-future-grants-apply",
  "main": "app/index.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pretest": "npm run test:lint",
    "test": "jest --runInBand",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:watch:all": "npm-run-all --parallel test:watch build:watch",
    "test:lint": "standard",
    "test:lint-fix": "standard --fix",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "start:watch": "npm-run-all --parallel build:watch start:nodemon",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [
    "Steve Dickinson steve.dickinson@defra.gov.uk",
    "Abidemi Adio abidemi.adio@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@azure/identity": "^3.3.0",
    "@azure/storage-blob": "^12.16.0",
    "@hapi/boom": "^9.1.4",
    "@hapi/catbox-redis": "^6.0.2",
    "@hapi/cookie": "^11.0.2",
    "@hapi/crumb": "^8.0.1",
    "@hapi/hapi": "^20.1.5",
    "@hapi/inert": "^6.0.5",
    "@hapi/vision": "^6.1.0",
    "@hapi/wreck": "^18.0.0",
    "@hapi/yar": "^10.1.1",
    "@ministryofjustice/frontend": "^1.4.2",
    "applicationinsights": "^2.5.0",
    "crypto-js": "^4.1.1",
    "ffc-ahwr-event-publisher": "1.0.0",
    "ffc-messaging": "^2.6.2",
    "govuk-frontend": "4.0.1",
    "hapi-pino": "^9.1.2",
    "joi": "17.6.4",
    "jsonwebtoken": "^9.0.0",
    "jwk-to-pem": "^2.0.5",
    "notifications-node-client": "^6.0.0",
    "nunjucks": "^3.2.3",
    "uuid": "^8.3.2"
  },
  "overrides": {
    "notifications-node-client": {
      "jsonwebtoken": "9.0.0"
    },
    "@azure/identity": {
      "jsonwebtoken": "9.0.0"
    },
    "semver": "7.5.2"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "^5.0.1",
    "@types/cheerio": "^0.22.31",
    "@types/hapi__hapi": "^20.0.10",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.19",
    "blipp": "^4.0.2",
    "cheerio": "^1.0.0-rc.10",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.6.0",
    "dotenv": "^16.0.3",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.0.6",
    "jest-junit": "^13.0.0",
    "jest-when": "^3.5.2",
    "mini-css-extract-plugin": "^2.5.3",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.5.1",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.49.7",
    "sass-loader": "^12.4.0",
    "standard": "^16.0.4",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "standard": {
    "env": {
      "jest": true
    },
    "globals": [
      "$",
      "browser"
    ],
    "ignore": [
      "app/frontend/dist/**/*.js",
      "test/acceptance/**/*.js",
      "test/acceptance/**/*.mjs",
      "test/acceptance/**/*.cjs"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
